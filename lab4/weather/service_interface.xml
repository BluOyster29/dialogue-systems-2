<?xml version="1.0" encoding="utf-8"?>
<service_interface>
    <query name="temperature">
      <parameters>
        <parameter predicate="select_city" format="grammar_entry"/>
        <parameter predicate="select_country" format ="grammar_entry"/>
        <parameter predicate="select_units" format ="grammar_entry" default="metric"/>
      </parameters>
      <target>
        <device_module device="WeatherDevice"/>
      </target>
    </query>



</service_interface>
