<?xml version="1.0" encoding="utf-8"?>
<grammar>
  <action name="top">
    <one-of>
      <item>main menu</item>
      <item>top</item>
      <item>beginning</item>
      <item>cancel</item>
      <item>forget it</item>
      <item>never mind</item>
      <item>abort</item>
    </one-of>
  </action>

  <action name="up">
    <one-of>
      <item>up</item>
      <item>back</item>
      <item>go back</item>
    </one-of>
  </action>

  <action name="make_call">
    <one-of>
      <item>make a call</item>
      <item>call
        <slot>predicate="contact_name" type="individual"</slot>
      </item>
      <item>call
        <slot> predicate="contact_name" type="individual"</slot> 's
        <slot> predicate="number_type" type ="individual"</slot>
      </item>
    </one-of>
  </action>

  <question speaker="system" predicate="contact_name" type="wh_question">
    which contact?
  </question>

  <question speaker="system" predicate="number_type" type="wh_question">
    which phone?
  </question>

  <report action=MakeCall stats="ended">Calling <slot predicate="contact_name"/>'s<slot predicate="number_type"/>.</report>'

  <individual name="mobile">
    <item>mobile</item>
  </individual>

  <individual name="home">
    <item>home</item>
  </individual>

  <individual name="work">
    <item>work</item>
  </individual>


  <individual name="contact_john">
    <item>john</item>
  </individual>

  <individual name="contact_andy">
    <item>mary</item>
  </individual>

  <individual name="contact_mary">
    <item>andy</item>
  </individual>


</grammar>
