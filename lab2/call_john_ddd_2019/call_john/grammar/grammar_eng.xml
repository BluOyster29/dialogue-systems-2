<?xml version="1.0" encoding="utf-8"?>
<grammar>
  <action name="top">
    <one-of>
      <item>main menu</item>
      <item>top</item>
      <item>beginning</item>
      <item>cancel</item>
      <item>forget it</item>
      <item>never mind</item>
      <item>abort</item>
    </one-of>
  </action>

  <action name="up">
    <one-of>
      <item>up</item>
      <item>back</item>
      <item>go back</item>
    </one-of>
  </action>

  <action name="make_call">
    <one-of>
      <item>make a call</item>
      <item>call
        <slot>predicate="contact_name" type="individual"</slot>
      </item>
      <item>call
        <slot> predicate="contact_name" type="individual"</slot> 's
        <slot> predicate="number_type" type ="individual"</slot>
      </item>
    </one-of>
  </action>

  <individual name="John">
    <item>John</item>
  </individual>

  <individual name="Andy">
    <item>John</item>
  </individual>

  <individual name="Mary">
    <item>John</item>
  </individual>


</grammar>
