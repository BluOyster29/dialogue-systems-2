<?xml version="1.0" encoding="utf-8"?>
<grammar>
  <action name="top">
    <one-of>
      <item>main menu</item>
      <item>top</item>
      <item>beginning</item>
      <item>cancel</item>
      <item>forget it</item>
      <item>never mind</item>
      <item>abort</item>
    </one-of>
  </action>

  <action name="up">
    <one-of>
      <item>up</item>
      <item>back</item>
      <item>go back</item>
    </one-of>
  </action>

  <action name="make_call">
    <one-of>
      <item>make a call</item>
      <item>call <slot predicate="select_contact"/></item>
      <item>call <slot predicate="select_contact"/> <slot predicate="select_number"/></item>
    </one-of>
  </action>

  <question speaker="system" predicate="select_contact" type="wh_question">Which contact</question>

  <question speaker="system" predicate="select_number" type="wh_question">which phone</question>

  <report action="MakeCall" status="ended">Calling <slot predicate="select_contact"/>'s <slot predicate="select_number"/></report>

  <individual name="mobile">mobile</individual>

  <individual name="home">home</individual>

  <individual name="work">work</individual>

  <individual name="contact_john">
    <one-of>
      <item>John</item>
      <item>John's</item>
    </one-of>
  </individual>

  <individual name="contact_andy">
    <one-of>
      <item>Andy</item>
      <item>Andy's</item>
    </one-of>
</individual>

  <individual name="contact_mary">
    <one-of>
      <item>Mary</item>
      <item>Mary's</item>
    </one-of>
</individual>


</grammar>
